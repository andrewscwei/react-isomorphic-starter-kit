{
  "compilerOptions": {
    "declaration": true,
    "diagnostics": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020"
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "index.ts",
    "lib"
  ]
}
