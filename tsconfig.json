{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ESNext",
      "WebWorker"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": true,
    "outDir": "build",
    "paths": {
      "@lib/debug": ["./lib/debug/index"],
      "@lib/dom": ["./lib/dom/index"],
      "@lib/esr": ["./lib/esr/index"],
      "@lib/i18n": ["./lib/i18n/index"],
      "@lib/seo": ["./lib/seo/index"],
      "@lib/ssg": ["./lib/ssg/index"],
      "@lib/ssr": ["./lib/ssr/index"]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "lib",
    "src"
  ]
}
