{
  "extends": "tslint:latest",
  "rules": {
    "adjacent-overload-signatures": true,
    "array-type": [true, "generic"],
    "arrow-parens": [true],
    "arrow-return-shorthand": true,
    "class-name": true,
    "curly": [true, "ignore-same-line"],
    "eofline": true,
    "indent": [true, "spaces", 2],
    "import-spacing": true,
    "interface-name": [true, "never-prefix"],
    "linebreak-style": [true, "LF"],
    "max-line-length": false,
    "member-access": [true, "no-public"],
    "member-ordering": [true, { "order": "statics-first" }],
    "new-parens": true,
    "newline-before-return": false,
    "no-bitwise": false,
    "no-conditional-assignment": true,
    "no-console": true,
    "no-duplicate-imports": true,
    "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
    "no-empty-interface": false,
    "no-implicit-dependencies": false,
    "no-namespace": true,
    "no-shadowed-variable": false,
    "no-submodule-imports": false,
    "no-string-literal": false,
    "no-unused-expression": false,
    "no-var-requires": false,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "object-literal-shorthand": true,
    "object-literal-sort-keys": false,
    "one-line": [true, "check-open-brace"],
    "semicolon": [true, "always"],
    "space-before-function-paren": [true, { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
    "trailing-comma": [true, { "multiline": "always", "singleline": "never" }],
    "quotemark": [true, "single", "avoid-template", "avoid-escape"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-module", "check-separator", "check-rest-spread", "check-type", "check-typecast", "check-type-operator", "check-preblock"]
  }
}
