{
  "name": "react-isomorphic-starter-kit",
  "version": "4.0.0",
  "description": "Experimental React universal/isomorphic app starter kit",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "clean": "rimraf build",
    "dev": "npm run clean && NODE_ENV=development npm run build:server && NODE_ENV=development DEBUG=app* nodemon --watch ./build --inspect=5858 build/server & NODE_ENV=development npm run build:server -- --watch",
    "build": "npm run clean && NODE_ENV=production npm run build:client && NODE_ENV=production npm run build:server",
    "build:server": "webpack --colors --profile --config config/build.server.conf.ts --display-error-details",
    "build:client": "webpack --colors --profile --config config/build.client.conf.ts --display-error-details",
    "ship:clean": "./scripts/clean.sh",
    "ship:build": "./scripts/build.sh",
    "ship:run": "./scripts/run.sh",
    "test": "NODE_ENV=test DEBUG=test* mocha --require ts-node/register --timeout 10000 --reporter spec --full-trace --colors --recursive --bail --exit \"tests/**/*.ts\"",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\" \"config/**/*.ts\" \"config/**/*.tsx\" --config tslint.json --project tsconfig.json",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:css": "stylelint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "compression": "^1.7.3",
    "debug": "^4.1.1",
    "dotenv": "^6.2.0",
    "express": "~4.16.4",
    "helmet": "^3.15.1",
    "ip": "^1.1.5",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "~1.9.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.8.0",
    "react-redux": "^6.0.1",
    "react-router": "^4.3.1",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.6.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.6.1",
    "sitemap": "^2.1.0",
    "source-map-support": "^0.5.10",
    "styled-components": "^4.1.3",
    "styled-normalize": "^8.0.6"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@hot-loader/react-dom": "^16.8.3",
    "@types/compression": "0.0.36",
    "@types/copy-webpack-plugin": "^4.4.3",
    "@types/debug": "^4.1.2",
    "@types/dotenv": "^6.1.0",
    "@types/helmet": "0.0.42",
    "@types/ip": "^1.1.0",
    "@types/isomorphic-fetch": "^0.0.35",
    "@types/mocha": "^5.2.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.9.5",
    "@types/react": "^16.8.5",
    "@types/react-dom": "^16.8.2",
    "@types/react-helmet": "^5.0.8",
    "@types/react-hot-loader": "^4.1.0",
    "@types/react-intl": "^2.3.17",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-config": "^1.1.1",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-transition-group": "^2.0.16",
    "@types/require-dir": "^1.0.0",
    "@types/serialize-javascript": "^1.5.0",
    "@types/styled-components": "^4.1.10",
    "@types/supertest": "^2.0.7",
    "@types/webpack": "^4.4.25",
    "@types/webpack-bundle-analyzer": "^2.13.1",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-env": "^1.13.7",
    "@types/webpack-hot-middleware": "^2.16.5",
    "@types/webpack-manifest-plugin": "^2.0.0",
    "@types/webpack-node-externals": "^1.6.3",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "copy-webpack-plugin": "^5.0.0",
    "file-loader": "^3.0.1",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "image-webpack-loader": "^4.6.0",
    "mocha": "^6.0.2",
    "nodemon": "^1.18.10",
    "raw-loader": "^1.0.0",
    "react-hot-loader": "^4.7.1",
    "require-dir": "^1.2.0",
    "rimraf": "^2.6.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.2",
    "supertest": "^3.4.2",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.0",
    "typescript": "^3.3.3333",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-bundle-analyzer": "^3.0.4",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  }
}
