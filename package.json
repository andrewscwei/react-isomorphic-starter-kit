{
  "name": "react-isomorphic-starter-kit",
  "version": "16.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "npm run start:server",
    "start:server": "node build",
    "start:static": "http-server build",
    "start:edge": "wrangler pages dev --node-compat --compatibility-date=2023-08-14 ./build",
    "start:container": "docker run -it --rm -p ${PORT:-8080}:8080 --name app ${IMAGE_NAME:-app}:${IMAGE_TAG:-latest}",
    "clean": "rimraf build",
    "dev": "npm run dev:server",
    "dev:server": "npm run clean && cross-env NODE_ENV=development concurrently -n server,main -c magenta,cyan \"npm run bundle:server -- --watch\" \"wait-on build/index.js && DEBUG=server* nodemon --exec 'node -r dotenv/config' --watch build build\"",
    "dev:static": "npm run clean && cross-env NODE_ENV=development concurrently -n server,main -c magenta,cyan \"webpack --config config/build.dev.conf.ts --watch\" \"wait-on build/index.js && DEBUG=server* nodemon --exec 'node -r dotenv/config' --watch build build\"",
    "dev:edge": "npm run clean && cross-env NODE_ENV=production concurrently -n client,edge,main -c green,blue,cyan \"npm run bundle:client -- --watch\" \"wait-on build/asset-manifest.json && npm run bundle:edge -- --watch\" \"wait-on build/index.js && wrangler pages dev --node-compat --compatibility-date=2023-08-14 ./build\"",
    "prebuild:server": "npm run lint",
    "prebuild:static": "npm run lint",
    "prebuild:edge": "npm run lint",
    "build": "npm run build:server",
    "build:server": "cross-env-shell BUILD_NUMBER=${BUILD_NUMBER:-$(git rev-parse --short HEAD)} \"npm run clean && npm run bundle:client && npm run bundle:server\"",
    "build:static": "npm run build && ts-node ./config/scripts/export",
    "build:edge": "cross-env-shell BUILD_NUMBER=${BUILD_NUMBER:-$(git rev-parse --short HEAD)} \"npm run clean && npm run bundle:client && npm run bundle:edge\"",
    "build:container": "docker build -t ${IMAGE_NAME:-app}:${IMAGE_TAG:-latest} .",
    "bundle:client": "webpack --config config/build.client.conf.ts",
    "bundle:server": "webpack --config config/build.server.conf.ts",
    "bundle:edge": "webpack --config config/build.edge.conf.ts",
    "test": "npm run test:server",
    "test:server": "jest --config=config/test.conf.ts tests/server/$npm_config_files",
    "test:ts": "jest --testEnvironment=jsdom --config=config/test.conf.ts src/$npm_config_files",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
    "lint:ts": "eslint --ext .ts --ext .tsx --ignore-pattern *.d.ts config lib src tests",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@babel/preset-env": "^7.22.15",
    "@babel/preset-react": "^7.22.15",
    "@babel/preset-typescript": "^7.22.15",
    "@cloudflare/workers-types": "^4.20230904.0",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@testing-library/react": "^14.0.0",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.6.0",
    "@types/object-hash": "^3.0.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-router-dom": "^5.3.3",
    "@types/sprintf-js": "^1.1.2",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.2",
    "@types/webpack-bundle-analyzer": "^4.6.0",
    "@types/webpack-env": "^1.18.1",
    "@types/webpack-hot-middleware": "^2.25.6",
    "@types/webpack-node-externals": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.49.0",
    "fork-ts-checker-webpack-plugin": "^8.0.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.29",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.3",
    "react-refresh": "^0.14.0",
    "rimraf": "^5.0.1",
    "source-map-support": "^0.5.21",
    "style-loader": "^3.3.3",
    "stylelint": "^15.10.3",
    "supertest": "^6.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-middleware": "^6.1.1",
    "webpack-hot-middleware": "^2.25.4",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0",
    "whatwg-fetch": "^3.6.19",
    "worker-loader": "^3.0.8",
    "wrangler": "^3.8.0"
  },
  "dependencies": {
    "debug": "^4.3.4",
    "express": "~4.18.2",
    "fast-xml-parser": "^4.2.7",
    "object-hash": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.16.0",
    "react-router-dom": "^6.16.0",
    "sprintf-js": "^1.1.3"
  }
}
