{
  "name": "react-universal-starter-kit",
  "version": "1.4.0",
  "description": "Experimental React universal/isomorphic app starter kit",
  "keywords": [
    "react",
    "universal",
    "isomorphic",
    "ssr",
    "css",
    "modules"
  ],
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "clean": "rimraf build",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:server": "NODE_ENV=production webpack --colors --profile --config config/build.server.conf.ts --display-error-details",
    "build:client": "NODE_ENV=production webpack --colors --profile --config config/build.client.conf.ts --display-error-details",
    "test": "echo \"No tests yet\"",
    "dev": "NODE_ENV=development DEBUG=app* nodemon --exec \"node --require ts-node/register --require tsconfig-paths/register --require dotenv/config\" --verbose --watch src --watch config --ignore config/locales --ignore src/containers --ignore src/components --ext ts,tsx,js,jsx,json --inspect=5858 src/server",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "tslint \"src/**/*.ts\" \"src/**/*.tsx\" \"config/**/*.ts\" \"config/**/*.tsx\" --config tslint.json --project tsconfig.json",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint \"src/**/*.tsx\"",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "express": "~4.16.3",
    "helmet": "^3.12.1",
    "i18next": "^11.3.2",
    "i18next-express-middleware": "^1.1.1",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "~1.9.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-i18next": "^7.6.1",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.4.1",
    "@types/debug": "^0.0.30",
    "@types/helmet": "^0.0.37",
    "@types/i18next": "^8.4.3",
    "@types/i18next-express-middleware": "^0.0.33",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/react-i18next": "^7.6.1",
    "@types/react-redux": "^6.0.1",
    "@types/react-router-config": "^1.0.7",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-transition-group": "^2.0.11",
    "@types/serialize-javascript": "^1.3.2",
    "@types/webpack": "^4.4.0",
    "@types/webpack-bundle-analyzer": "^2.9.2",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-hot-middleware": "^2.16.3",
    "@types/webpack-manifest-plugin": "^1.3.2",
    "copy-webpack-plugin": "^4.5.1",
    "dotenv": "^6.0.0",
    "file-loader": "^1.1.11",
    "nodemon": "^1.17.5",
    "react-transition-group": "^2.3.1",
    "rimraf": "^2.6.2",
    "styled-components": "^3.3.2",
    "styled-normalize": "^4.0.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.10.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-manifest-plugin": "^2.0.3"
  }
}
