{
  "name": "react-isomorphic-starter-kit",
  "version": "3.10.0",
  "description": "Experimental React universal/isomorphic app starter kit",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "clean": "rimraf build",
    "dev": "npm run clean && NODE_ENV=development npm run build:server && NODE_ENV=development DEBUG=app* nodemon --watch ./build --inspect=5858 build/server & NODE_ENV=development npm run build:server -- --watch",
    "build": "npm run clean && NODE_ENV=production npm run build:client && NODE_ENV=production npm run build:server",
    "build:server": "node -r @babel/register ./node_modules/.bin/webpack --colors --profile --config config/build.server.conf.js --display-error-details",
    "build:client": "node -r @babel/register ./node_modules/.bin/webpack --colors --profile --config config/build.client.conf.js --display-error-details",
    "ship:clean": "./scripts/clean.sh",
    "ship:build": "./scripts/build.sh",
    "ship:run": "./scripts/run.sh",
    "test": "NODE_ENV=test echo \"No tests yet\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "eslint . --ignore-path .gitignore --ext .jsx --ext .js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint \"src/**/*.js\" \"src/**/*.jsx\"",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "@babel/runtime": "^7.1.1",
    "debug": "^4.0.1",
    "dotenv": "^6.0.0",
    "express": "~4.16.3",
    "helmet": "^3.13.0",
    "ip": "^1.1.5",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "~1.9.1",
    "prop-types": "^15.6.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-helmet": "^5.2.0",
    "react-intl": "^2.7.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "react-transition-group": "^2.5.0",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "source-map-support": "^0.5.9",
    "styled-components": "^3.4.9",
    "styled-normalize": "^8.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.1.1",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-decorators": "^7.1.1",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.7.1",
    "copy-webpack-plugin": "^4.5.2",
    "eslint": "^5.6.1",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "happypack": "^5.0.0",
    "image-webpack-loader": "^4.3.1",
    "nodemon": "^1.18.4",
    "raw-loader": "^0.5.1",
    "require-dir": "^1.1.0",
    "rimraf": "^2.6.2",
    "stylelint": "^9.6.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.4.0",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.2",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  }
}
