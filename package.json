{
  "name": "react-isomorphic-starter-kit",
  "version": "25.2.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "npm run start:${RUNTIME:-server}",
    "start:static": "http-server build -p ${PORT:-8080}",
    "start:server": "node build/server/serve -p ${PORT:-8080} -r build -s build",
    "start:edge": "wrangler pages dev --port=${PORT:-8080} --compatibility-date=2024-06-22 build",
    "clean": "rimraf build",
    "dev": "npm run dev:${RUNTIME:-server}",
    "dev:static": "npm run dev:server",
    "dev:server": "NODE_ENV=development tsx watch --include src/main.server.tsx -r dotenv/config lib/ssr/serve -p ${PORT:-8080} -r src",
    "dev:edge": "concurrently -k -n client,edge -c gray,cyan \"NODE_ENV=development concurrently -k -p none \\\"vite build -w\\\" \\\"wait-on build/${BASE_PATH#/} && vite build -w --ssr main.edge.tsx\\\"\" \"wait-on -t 30s build/main.edge.js && wrangler pages dev --live-reload --compatibility-date=2024-06-22 --port=${PORT:-8080} build\"",
    "prebuild:static": "npm run clean && npm run lint && npm run typecheck",
    "prebuild:server": "npm run clean && npm run lint && npm run typecheck",
    "prebuild:edge": "npm run clean && npm run lint && npm run typecheck",
    "build": "npm run build:${RUNTIME:-server}",
    "build:static": "vite build && tsx -r dotenv/config lib/ssr/prerender -e src/main.server.tsx -l src/locales",
    "build:server": "vite build && vite build --ssr main.server.tsx && tsc lib/ssr/serve.ts --outDir build/server -m NodeNext",
    "build:edge": "vite build && vite build --ssr main.edge.tsx",
    "test": "npm run test:${RUNTIME:-server}",
    "test:static": "RUNTIME=static playwright test",
    "test:server": "RUNTIME=server playwright test",
    "test:edge": "RUNTIME=edge playwright test",
    "unit": "vitest run --coverage",
    "ship": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 ${npm_package_name}:latest",
    "ship:clean": "IMAGES=$(docker images | awk '$1 ~ /^'$(echo ${npm_package_name} | sed -e \"s/\\//\\\\\\\\\\//g\")'/ {print $3}') && if [ \"${IMAGES}\" != \"\" ]; then docker rmi -f ${IMAGES}; fi && docker system prune -f",
    "ship:build": "docker build -t ${npm_package_name}:latest .",
    "preship:dev": "docker build --target dev -t ${npm_package_name}:dev .",
    "ship:dev": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 -v ./src:/var/app/src ${npm_package_name}:dev npm run dev",
    "typecheck": "tsc --noEmit",
    "lint": "eslint && stylelint src/**/*.css",
    "lint:fix": "eslint --fix && stylelint src/**/*.css --fix"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@eslint/js": "^9.38.0",
    "@playwright/test": "^1.56.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "@testing-library/react": "^16.3.0",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/he": "^1.2.3",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/sprintf-js": "^1.1.4",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "happy-dom": "^20.0.7",
    "html-minifier-terser": "^7.2.0",
    "http-server": "^14.1.1",
    "rimraf": "^6.0.1",
    "semantic-release": "^25.0.1",
    "stylelint": "^16.25.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1",
    "wrangler": "^4.43.0"
  },
  "dependencies": {
    "debug": "^4.4.3",
    "express": "~5.1.0",
    "fast-xml-parser": "^5.3.0",
    "get-value": "^4.0.1",
    "he": "^1.2.0",
    "minimist": "^1.2.8",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router": "^7.9.4",
    "sprintf-js": "^1.1.3"
  }
}
