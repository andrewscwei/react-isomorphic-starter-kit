{
  "name": "react-universal-starter-kit",
  "version": "2.0.0",
  "description": "Experimental React universal/isomorphic app starter kit",
  "keywords": [
    "react",
    "universal",
    "isomorphic",
    "ssr",
    "css",
    "modules"
  ],
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "clean": "rimraf build",
    "dev": "npm run clean && NODE_ENV=development npm run build:server --quiet && NODE_ENV=development DEBUG=app* nodemon --exec \"node --require dotenv/config\" --verbose --watch build/server --inspect=5858 build/server & NODE_ENV=development npm run build:server -- --watch",
    "build": "npm run clean && NODE_ENV=production npm run build:client && NODE_ENV=production npm run build:server",
    "build:server": "webpack --colors --profile --config config/build.server.conf.ts --display-error-details",
    "build:client": "webpack --colors --profile --config config/build.client.conf.ts --display-error-details",
    "test": "NODE_ENV=test echo \"No tests yet\"",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix",
    "lint:js": "tslint \"src/**/*.ts\" \"src/**/*.tsx\" \"config/**/*.ts\" \"config/**/*.tsx\" --config tslint.json --project tsconfig.json",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint \"src/**/*.tsx\"",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "express": "~4.16.3",
    "helmet": "^3.12.1",
    "ip": "^1.1.5",
    "morgan": "~1.9.0",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^4.4.1",
    "@types/debug": "^0.0.30",
    "@types/helmet": "^0.0.37",
    "@types/ip": "^0.0.31",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.3.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/react-intl": "^2.3.8",
    "@types/react-redux": "^6.0.1",
    "@types/react-router-config": "^1.0.7",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-transition-group": "^2.0.11",
    "@types/serialize-javascript": "^1.3.2",
    "@types/superagent": "^3.8.0",
    "@types/webpack": "^4.4.0",
    "@types/webpack-bundle-analyzer": "^2.9.2",
    "@types/webpack-dev-middleware": "^2.0.1",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-hot-middleware": "^2.16.3",
    "@types/webpack-manifest-plugin": "^1.3.2",
    "@types/webpack-node-externals": "^1.6.3",
    "copy-webpack-plugin": "^4.5.1",
    "dotenv": "^6.0.0",
    "file-loader": "^1.1.11",
    "nodemon": "^1.17.5",
    "raw-loader": "^0.5.1",
    "react-transition-group": "^2.3.1",
    "rimraf": "^2.6.2",
    "styled-components": "^3.3.2",
    "styled-normalize": "^4.0.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.3.1",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "url-loader": "^1.0.1",
    "webpack": "^4.10.2",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.0.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-manifest-plugin": "^2.0.3",
    "webpack-node-externals": "^1.7.2"
  }
}
