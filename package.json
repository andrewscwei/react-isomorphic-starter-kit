{
  "name": "react-isomorphic-starter-kit",
  "version": "10.0.0",
  "description": "React isomorphic app starter kit",
  "homepage": "https://react-isomorphic-starter-kit.herokuapp.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node build",
    "clean": "rimraf build",
    "dev": "npm run clean && cross-env NODE_ENV=development DEBUG=app* concurrently \"npm run build:server -- --watch\" \"wait-on build/index.js && nodemon --quiet --exec 'node -r dotenv/config' --watch build --inspect=5858 build\"",
    "build": "cross-env-shell NODE_ENV=production \"npm run clean && npm run build:client && npm run build:server\"",
    "build:server": "webpack --config config/build.server.conf.ts",
    "build:client": "webpack --config config/build.client.conf.ts",
    "ship:clean": "./scripts/clean.sh",
    "ship:build": "./scripts/build.sh",
    "ship:run": "./scripts/run.sh",
    "test": "cross-env SKIP_LISTEN=true DEBUG=test* jest -b --colors --passWithNoTests --detectOpenHandles tests/$npm_config_files",
    "test:ts": "cross-env NODE_ENV=test DEBUG=test* jest -b --colors --passWithNoTests --detectOpenHandles src/$npm_config_files",
    "lint": "eslint --ext .ts --ext .tsx src config tests",
    "lint:fix": "npm run lint -- --fix"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.19.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/preset-env": "^7.19.3",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
    "@types/compression": "1.7.2",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/core-js": "^2.5.5",
    "@types/debug": "^4.1.7",
    "@types/ip": "^1.1.0",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jest": "^29.1.1",
    "@types/lodash": "^4.14.186",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.8.1",
    "@types/node-polyglot": "^2.4.2",
    "@types/object-hash": "^2.2.1",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/require-dir": "^1.0.2",
    "@types/serialize-javascript": "^5.0.2",
    "@types/styled-components": "^5.1.26",
    "@types/supertest": "^2.0.12",
    "@types/webpack": "^5.28.0",
    "@types/webpack-bundle-analyzer": "^4.4.3",
    "@types/webpack-env": "^1.18.0",
    "@types/webpack-hot-middleware": "^2.25.6",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-styled-components": "^2.0.7",
    "concurrently": "^7.4.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.24.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^7.2.13",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "raw-loader": "^4.0.2",
    "react-is": "^18.2.0",
    "react-refresh": "^0.14.0",
    "require-dir": "^1.2.0",
    "rimraf": "^3.0.2",
    "speed-measure-webpack-plugin": "^1.5.0",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "url-loader": "^4.1.1",
    "wait-on": "^6.0.1",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-middleware": "^5.3.3",
    "webpack-hot-middleware": "^2.25.2",
    "webpack-manifest-plugin": "^5.0.0",
    "webpack-node-externals": "^3.0.0",
    "worker-loader": "^3.0.8"
  },
  "dependencies": {
