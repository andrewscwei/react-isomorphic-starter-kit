{
  "name": "react-express-starter-kit",
  "description": "Experimental React universal/isomorphic app starter kit",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "node build/server",
    "clean": "rimraf build",
    "build": "npm run clean && npm run build:client && npm run build:server",
    "build:server": "NODE_ENV=production webpack --colors --profile --config config/build.server.conf.js --display-error-details",
    "build:client": "NODE_ENV=production webpack --colors --profile --config config/build.client.conf.js --display-error-details",
    "test": "echo \"No tests yet\"",
    "dev": "npm run clean && NODE_ENV=development DEBUG=app* BABEL_ENV=server CONFIG_DIR=$(pwd)/config nodemon --exec babel-node --verbose --watch src --watch config --ignore config/locales --ignore src/containers --ignore src/components --ext js,jsx,json --inspect=5858 src/server",
    "lint:js": "eslint . -f node_modules/eslint-friendly-formatter --ignore-path .gitignore --ext .jsx --ext .js",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "npm run lint:css -- --fix"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "debug": "^3.1.0",
    "express": "~4.16.2",
    "helmet": "^3.11.0",
    "i18next": "^10.4.1",
    "i18next-express-middleware": "^1.0.10",
    "i18next-node-fs-backend": "^1.0.0",
    "isomorphic-fetch": "^2.2.1",
    "morgan": "~1.9.0",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.4.0",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "serialize-javascript": "^1.4.0",
    "source-map-support": "^0.5.3"
  },
  "devDependencies": {
    "autoprefixer": "^8.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-css-modules-transform": "^1.4.0",
    "babel-plugin-module-resolver": "^3.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "copy-webpack-plugin": "^4.4.1",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "enhanced-resolve": "^4.0.0",
    "eslint": "^4.18.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.6.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.9",
    "nodemon": "^1.15.1",
    "normalize.css": "^8.0.0",
    "postcss-hexrgba": "^1.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.0",
    "precss": "^3.1.1",
    "rimraf": "^2.6.2",
    "style-loader": "^0.20.2",
    "stylelint": "^9.1.1",
    "stylelint-config-css-modules": "^1.2.0",
    "stylelint-config-standard": "^18.1.0",
    "stylelint-webpack-plugin": "^0.10.3",
    "url-loader": "^0.6.2",
    "webpack": "^3.11.0",
    "webpack-bundle-analyzer": "^2.10.0",
    "webpack-dev-middleware": "^2.0.5",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-node-externals": "^1.6.0"
  }
}
