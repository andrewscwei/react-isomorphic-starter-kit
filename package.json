{
  "name": "react-isomorphic-starter-kit",
  "version": "17.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "npm run start:${RUNTIME:-server}",
    "start:static": "vite preview --port ${PORT:-8080}",
    "start:server": "node build",
    "start:edge": "wrangler pages dev --port=${PORT:-8080} --compatibility-date=2024-06-22 ./build",
    "clean": "rimraf build",
    "dev": "npm run dev:${RUNTIME:-server}",
    "dev:static": "NODE_ENV=development vite dev --port ${PORT:-8080}",
    "dev:server": "NODE_ENV=development nodemon --exec 'tsx -r dotenv/config' -V -w index.ts -e ts .",
    "dev:edge": "npm run clean && NODE_ENV=development concurrently \"vite build -w\" \"vite build -w --ssr main.edge.tsx\" \"wait-on build/main.edge.js && wrangler pages dev --port=${PORT:-8080} --compatibility-date=2024-06-22 ./build\"",
    "prebuild:static": "npm run lint && npm run clean",
    "prebuild:server": "npm run lint && npm run clean",
    "prebuild:edge": "npm run lint && npm run clean",
    "build": "npm run build:${RUNTIME:-server}",
    "build:static": "vite build && vite build --ssr main.server.tsx && tsc -p tsconfig.node.json && tsx scripts/prerender.ts",
    "build:server": "vite build && vite build --ssr main.server.tsx && tsc -p tsconfig.node.json",
    "build:edge": "vite build && vite build --ssr main.edge.tsx",
    "test": "npm run test:${RUNTIME:-server}",
    "test:static": "RUNTIME=static playwright test",
    "test:server": "RUNTIME=server playwright test",
    "test:edge": "RUNTIME=edge playwright test",
    "test:unit": "vitest run --coverage",
    "ship": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 ${npm_package_name}:latest",
    "ship:clean": "IMAGES=$(docker images | awk '$1 ~ /^'$(echo ${npm_package_name} | sed -e \"s/\\//\\\\\\\\\\//g\")'/ {print $3}') && if [ \"${IMAGES}\" != \"\" ]; then docker rmi -f ${IMAGES}; fi && docker system prune -f",
    "ship:build": "docker build -t ${npm_package_name}:latest .",
    "preship:dev": "docker build --target dev -t ${npm_package_name}:dev .",
    "ship:dev": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 -v ./src:/var/app/src ${npm_package_name}:dev npm run dev",
    "lint": "npm run lint:ts && npm run lint:css",
    "lint:fix": "npm run lint:ts:fix && npm run lint:css:fix",
    "lint:ts": "eslint",
    "lint:ts:fix": "npm run lint:ts -- --fix",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "npm run lint:css -- --fix",
    "scan": "dotenv -- sh -c 'sonar-scanner -Dsonar.projectKey=$SONAR_PROJECT_KEY -Dsonar.sources=. -Dsonar.host.url=$SONAR_HOST_URL -Dsonar.token=$SONAR_TOKEN'"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240712.0",
    "@eslint/js": "^9.7.0",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@playwright/test": "^1.45.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^2.3.0",
    "@testing-library/react": "^16.0.0",
    "@types/compression": "^1.7.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^20.14.11",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/sprintf-js": "^1.1.4",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.3",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.7.0",
    "jsdom": "^24.1.0",
    "nodemon": "^3.1.4",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^9.6.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.0.0",
    "stylelint": "^16.7.0",
    "supertest": "^7.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.0.0-alpha.44",
    "vite": "^5.3.4",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^2.0.3",
    "wait-on": "^7.2.0",
    "wrangler": "^3.65.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "debug": "^4.3.5",
    "express": "~4.19.2",
    "fast-xml-parser": "^4.4.0",
    "html-minifier-terser": "^7.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^6.25.0",
    "react-router-dom": "^6.25.0",
    "sprintf-js": "^1.1.3"
  }
}
