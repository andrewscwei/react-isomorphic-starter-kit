{
  "name": "react-isomorphic-starter-kit",
  "version": "17.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "npm run start:${RUNTIME:-server}",
    "start:static": "serve build -p ${PORT:-8080}",
    "start:server": "node build",
    "start:edge": "wrangler pages dev --port=${PORT:-8080} --compatibility-date=2024-06-22 build",
    "clean": "rimraf build",
    "dev": "npm run dev:${RUNTIME:-server}",
    "dev:static": "vite dev --port ${PORT:-8080}",
    "dev:server": "NODE_ENV=development tsx watch --ignore 'vite.config.ts.timestamp*' -r dotenv/config .",
    "dev:edge": "npm run clean && concurrently -k -n client,edge -c gray,cyan \"NODE_ENV=development concurrently -k -p none \\\"vite build -w\\\" \\\"vite build -w --ssr main.edge.tsx\\\"\" \"wait-on -t 30s build/main.edge.js build/index.html && wrangler pages dev --live-reload --compatibility-date=2024-06-22 --port=${PORT:-8080} build\"",
    "prebuild:static": "npm run lint && npm run clean",
    "prebuild:server": "npm run lint && npm run clean",
    "prebuild:edge": "npm run lint && npm run clean",
    "build": "npm run build:${RUNTIME:-server}",
    "build:static": "vite build && vite build --ssr main.server.tsx && tsc -p tsconfig.node.json && tsx -r dotenv/config scripts/prerender.ts",
    "build:server": "vite build && vite build --ssr main.server.tsx && tsc -p tsconfig.node.json",
    "build:edge": "vite build && vite build --ssr main.edge.tsx",
    "test": "npm run test:${RUNTIME:-server}",
    "test:static": "RUNTIME=static playwright test",
    "test:server": "RUNTIME=server playwright test",
    "test:edge": "RUNTIME=edge playwright test",
    "unit": "vitest run --coverage",
    "ship": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 ${npm_package_name}:latest",
    "ship:clean": "IMAGES=$(docker images | awk '$1 ~ /^'$(echo ${npm_package_name} | sed -e \"s/\\//\\\\\\\\\\//g\")'/ {print $3}') && if [ \"${IMAGES}\" != \"\" ]; then docker rmi -f ${IMAGES}; fi && docker system prune -f",
    "ship:build": "docker build -t ${npm_package_name}:latest .",
    "preship:dev": "docker build --target dev -t ${npm_package_name}:dev .",
    "ship:dev": "docker run -it --rm --name ${npm_package_name} -p ${PORT:-8080}:8080 -v ./src:/var/app/src ${npm_package_name}:dev npm run dev",
    "lint": "eslint && stylelint src/**/*.css",
    "lint:fix": "eslint --fix && stylelint src/**/*.css --fix"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240903.0",
    "@eslint/js": "^9.9.1",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@playwright/test": "^1.46.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin": "^2.7.2",
    "@testing-library/react": "^16.0.1",
    "@types/compression": "^1.7.5",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^22.5.4",
    "@types/postcss-import": "^14.0.3",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/react-router-dom": "^5.3.3",
    "@types/sprintf-js": "^1.1.4",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "happy-dom": "^15.7.3",
    "html-minifier-terser": "^7.2.0",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.0.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.0",
    "serve": "^14.2.3",
    "stylelint": "^16.9.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.3",
    "vitest": "^2.0.5",
    "wait-on": "^8.0.0",
    "wrangler": "^3.74.0"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "debug": "^4.3.6",
    "express": "~4.19.2",
    "fast-xml-parser": "^4.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^6.26.1",
    "react-router-dom": "^6.26.1",
    "sprintf-js": "^1.1.3"
  }
}
