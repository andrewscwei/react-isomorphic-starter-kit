{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug (Chrome)",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },
    {
      "name": "Debug (Firefox)",
      "request": "launch",
      "type": "firefox",
      "reAttach": true,
      "url": "http://localhost:8080/",
      "webRoot": "${workspaceFolder}/src"
    },
    {
      "name": "Debug (Edge)",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    }
  ]
}
